    /*
     * Get common by id
     */
    function get_country($id = null)
    {
		if($id!=null){
			$gets=array('id'=>$id);
		}else{
			$gets=array('1'=>'1');
		}
        return $this->db->get_where('countries',$gets)->result_array();
    }
    
   function get_state($id = null)
    {
		if($id!=null){
			$this->db->where('country_id',$id);
		}else{
			$this->db->where('1','1');
		}
        $statez= $this->db->get('states')->result_array();
// echo		$this->db->last_query();exit();
		$state='';
		foreach($statez as $cs){
				$state.='<option value="'.$cs["id"].'">'.$cs["name"].'</option>';
		}
		return $state;
    }
	
