class Discounts extends CI_Controller{
    function __construct()
    {
        parent::__construct();
        $this->load->model('Discounts_model');
		$this->load->model('Courses_model');
        $this->load->model('Users_model');
        $this->load->model('Curriculam_model');
    } 

    /*
     * Listing of discounts
     */
    function index()
    {
        $params['limit'] = RECORDS_PER_PAGE; 
        $params['offset'] = ($this->input->get('per_page')) ? $this->input->get('per_page') : 0;
        
        $config = $this->config->item('pagination');
        $config['base_url'] = site_url('discounts/index?');
        $config['total_rows'] = $this->Discounts_model->get_all_discounts_count();
        $this->pagination->initialize($config);

        $data['discounts'] = $this->Discounts_model->get_all_discounts($params);
        
        $data['_view'] = 'discounts/index';
        $this->load->view('layouts/main',$data);
    }

    /*
     * Adding a new discounts ffffff
     */
    function add()
    {   
        $this->load->library('form_validation');

		//
		$this->form_validation->set_rules('course_id','Course_id','trim|required|max_length[10]');
$this->form_validation->set_rules('discs','Discs','trim|required');

		
		if($this->form_validation->run())     
        {   
            $params = array(
				//
				'course_id' => $this->input->post('course_id'),
'discs' => $this->input->post('discs'),

            );
            $params=$this->security->xss_clean($params);
            $discounts_id = $this->Discounts_model->add_discounts($params);
            redirect('discounts/index');
        }
        else
        {   
            $data['courses'] = $this->Courses_model->get_all_Courses();
            $data['users'] = $this->Users_model->user_info();
            $data['curriculam'] = $this->Curriculam_model->get_all_curriculam_list();      
			
			
				
            $data['_view'] = 'discounts/add';
            $this->load->view('layouts/main',$data);
        }
    }  

    /*
     * Editing a discounts
     */
    function edit($id)
    {   
        // check if the discounts exists before trying to edit it
        $data['discounts'] = $this->Discounts_model->get_discounts($id);
        
        if(isset($data['discounts']['id']))
        {
            $this->load->library('form_validation');

			//
			$this->form_validation->set_rules('course_id','Course_id','trim|required|max_length[10]');
$this->form_validation->set_rules('discs','Discs','trim|required');

		
			if($this->form_validation->run())     
            {   
                $params = array(
					//
					'course_id' => $this->input->post('course_id'),
'discs' => $this->input->post('discs'),

                );
				$params=$this->security->xss_clean($params);
                $this->Discounts_model->update_discounts($id,$params);            
                redirect('discounts/index');
            }
            else
            {  
            $data['courses'] = $this->Courses_model->get_all_Courses();
            $data['users'] = $this->Users_model->user_info();
            $data['curriculam'] = $this->Curriculam_model->get_all_curriculam_list();
                $data['_view'] = 'discounts/edit';
                $this->load->view('layouts/main',$data);
            }
        }
        else
            show_error('The discounts you are trying to edit does not exist.');
    } 

    /*
     * Deleting discounts
     */
    function remove($id)
    {
        $discounts = $this->Discounts_model->get_discounts($id);

        // check if the discounts exists before trying to delete it
        if(isset($discounts['id']))
        {
            $this->Discounts_model->delete_discounts($id);
            redirect('discounts/index');
        }
        else
            show_error('The discounts you are trying to delete does not exist.');
    }
    
}