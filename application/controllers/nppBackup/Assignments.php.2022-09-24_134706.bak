    /*
     * Editing a assignments
     */
    function edit($id)
    {   
        // check if the assignments exists before trying to edit it
        $data['assignments'] = $this->Assignments_model->get_assignments($id);
        if(isset($data['assignments']['id']))
        {
            $this->load->library('form_validation');

			//
			$this->form_validation->set_rules('course_id','Course Name','trim|required|max_length[10]');
			$this->form_validation->set_rules('batch_id','Batch Name','trim|required|max_length[10]');
			$this->form_validation->set_rules('title','Title','trim|required|max_length[255]');
			$this->form_validation->set_rules('description','Description','trim|required');
			//$this->form_validation->set_rules('docsa','Docsa','trim|required|max_length[255]');

			$coursename=$this->Courses_model->get_courses($_POST['course_id']);
			$cname=$_POST['course_id'].'_'.$coursename['title'].'_assignments';
			if($this->form_validation->run())     
            {   
				/// upload docsA
				$config['upload_path']   = './uploads/assignments'; 
				$config['allowed_types'] = 'gif|jpg|png|zip|xls|xlsx|doc|pdf'; 
				$config['max_size']      = 1000000; 
				$config['max_width']     = 3000; 
				$config['max_height']    = 3000;  
				
				$this->load->library('upload', $config);
				// multiple
				$count = count($_FILES['docsa']['name']);
				$kk=0;
				
				for($kk;$kk<$count;$kk++){
					
							$_FILES['docsa'.$kk]['name'] = $_FILES['docsa']['name'][$kk];
							$_FILES['docsa'.$kk]['type'] = $_FILES['docsa']['type'][$kk];
							$_FILES['docsa'.$kk]['tmp_name'] = $_FILES['docsa']['tmp_name'][$kk];
							$_FILES['docsa'.$kk]['error'] = $_FILES['docsa']['error'][$kk];
							$_FILES['docsa'.$kk]['size'] = $_FILES['docsa']['size'][$kk];
							$config['file_name'] = $cname.'_'.$kk;
							$this->upload->initialize($config);
						if ($this->upload->do_upload('docsa'.$kk)) {
							$aa= array('upload_data' => $this->upload->data());
							$mar[] = $aa['upload_data']['file_name'];
								
						} else {
							$data['error']= array('error' => $this->upload->display_errors()); 
						}
	
				}
				$files=json_encode($mar);
				/////////////////////
				
                $params = array(
					//
					'course_id' => $this->input->post('course_id'),
					'batch_id' => $this->input->post('batch_id'),
					'title' => $this->input->post('title'),
					'description' => $this->input->post('description'),
					'docsa' => $files

                );
				$params=$this->security->xss_clean($params);
				
                $this->Assignments_model->update_assignments($id,$params);            
                redirect('assignments/index');
            }
            else
            {
				$data['courses'] = $this->Courses_model->get_allcours_list();
                $data['_view'] = 'assignments/edit';
                $this->load->view('layouts/main',$data);
            }
        }
        else
            show_error('The assignments you are trying to edit does not exist.');
    } 

    /*
     * Deleting assignments
     */
    function remove($id)
    {
        $assignments = $this->Assignments_model->get_assignments($id);

        // check if the assignments exists before trying to delete it
        if(isset($assignments['id']))
        {
            $this->Assignments_model->delete_assignments($id);
            redirect('assignments/index');
        }
        else
            show_error('The assignments you are trying to delete does not exist.');
    }
    
}