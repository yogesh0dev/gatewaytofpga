    /*
     * Listing of assignments
     */
    function index()
    {
        $params['limit'] = RECORDS_PER_PAGE; 
        $params['offset'] = ($this->input->get('per_page')) ? $this->input->get('per_page') : 0;
        
        $config = $this->config->item('pagination');
        $config['base_url'] = site_url('assignments/index?');
        $config['total_rows'] = $this->Assignments_model->get_all_assignments_count();
        $this->pagination->initialize($config);

        $data['assignments'] = $this->Assignments_model->get_all_assignments($params);
        $data['_view'] = 'assignments/index';
        $this->load->view('layouts/main2',$data);
    }

    /*
     * Adding a new assignments ffffff
     */
